<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_profile_header"
        android:title="City Directory"
        android:titleTextColor="@android:color/white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/rowCategories"
            android:layout_width="295dp"
            android:layout_height="39dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/rvPlaces"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/btnRestaurants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Restaurants"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="#E9F0FF"
                app:chipCornerRadius="20dp"
                app:closeIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btnBusinesses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Businesses"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="#E9F0FF"
                app:chipCornerRadius="20dp"
                app:closeIconVisible="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btnServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="#E9F0FF"
                app:chipCornerRadius="20dp"
                app:closeIconVisible="false" />
        </com.google.android.material.chip.ChipGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlaces"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/rowCategories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
